@using System.Linq
@model Aluno
@{
    ViewData["Title"] = "Detalhes do aluno";
}

<h1 class="h3 mb-3">@Model.Nome</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">E-mail</dt>
            <dd class="col-sm-8">@Model.Email</dd>
            <dt class="col-sm-4">Telefone</dt>
            <dd class="col-sm-8">@Model.Telefone</dd>
        </dl>
    </div>
</div>

<h2 class="h5 mt-4">Matrículas</h2>
@if (!Model.Matriculas.Any())
{
    <p>Este aluno ainda não possui matrículas.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead>
            <tr>
                <th>Curso</th>
                <th>Preço pago</th>
                <th>Progresso</th>
                <th>Status</th>
                <th>Nota final</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var matricula in Model.Matriculas.OrderBy(m => m.Curso.Titulo))
            {
                <tr>
                    <td>@matricula.Curso.Titulo</td>
                    <td>@matricula.PrecoPago.ToString("C2")</td>
                    <td>@matricula.Progresso %</td>
                    <td>@matricula.Status</td>
                    <td>@(matricula.NotaFinal?.ToString("F2") ?? "-")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-controller="Matriculas" asp-action="Manage" asp-route-alunoId="@Model.Id">Gerenciar matrículas</a>
    <a class="btn btn-link" asp-action="Index">Voltar</a>
</div>
