@using System.Linq
@model Curso
@{
    ViewData["Title"] = "Detalhes do curso";
}

<h1 class="h3 mb-3">@Model.Titulo</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Preço base</dt>
            <dd class="col-sm-8">@Model.PrecoBase.ToString("C2")</dd>
            <dt class="col-sm-4">Carga horária</dt>
            <dd class="col-sm-8">@Model.CargaHoraria h</dd>
            <dt class="col-sm-4">Descrição</dt>
            <dd class="col-sm-8">@Model.Descricao</dd>
        </dl>
    </div>
</div>

<h2 class="h5 mt-4">Alunos matriculados</h2>
@if (!Model.Matriculas.Any())
{
    <p>Nenhum aluno matriculado.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead>
            <tr>
                <th>Aluno</th>
                <th>Preço pago</th>
                <th>Progresso</th>
                <th>Status</th>
                <th>Nota final</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var matricula in Model.Matriculas.OrderBy(m => m.Aluno.Nome))
            {
                <tr>
                    <td>@matricula.Aluno.Nome</td>
                    <td>@matricula.PrecoPago.ToString("C2")</td>
                    <td>@matricula.Progresso %</td>
                    <td>@matricula.Status</td>
                    <td>@(matricula.NotaFinal?.ToString("F2") ?? "-")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-controller="Matriculas" asp-action="Index" asp-route-search="@Model.Titulo">Ver matrículas</a>
    <a class="btn btn-link" asp-action="Index">Voltar</a>
</div>
