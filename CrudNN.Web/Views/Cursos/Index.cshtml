@using System.Linq
@model IEnumerable<Curso>
@{
    ViewData["Title"] = "Cursos";
    var search = ViewData["Search"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Cursos</h1>
    <a class="btn btn-primary" asp-action="Create">Novo curso</a>
</div>

<form method="get" class="row gy-2 gx-2 align-items-end mb-3">
    <div class="col-sm-5 col-md-4 col-lg-3">
        <label class="form-label" for="search">Buscar por título ou descrição</label>
        <input class="form-control" id="search" name="search" value="@search" />
    </div>
    <div class="col-sm-auto">
        <button type="submit" class="btn btn-outline-secondary">Pesquisar</button>
    </div>
    @if (!string.IsNullOrWhiteSpace(search))
    {
        <div class="col-sm-auto">
            <a class="btn btn-link" asp-action="Index">Limpar</a>
        </div>
    }
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">Nenhum curso encontrado.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>Título</th>
                <th>Preço base</th>
                <th>Carga horária</th>
                <th class="text-end">Ações</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td>@curso.Titulo</td>
                    <td>@curso.PrecoBase.ToString("C2")</td>
                    <td>@curso.CargaHoraria h</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Details" asp-route-id="@curso.Id">Detalhes</a>
                        <a class="btn btn-sm btn-outline-primary me-1" asp-action="Edit" asp-route-id="@curso.Id">Editar</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@curso.Id">Excluir</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
