@using System.Linq
@model Curso
@{
    ViewData["Title"] = "Excluir curso";
    var hasMatriculas = Model.Matriculas.Any();
}

<h1 class="h3 mb-3">Confirmar exclusão</h1>

@if (hasMatriculas)
{
    <div class="alert alert-warning">
        Não é possível excluir este curso porque existem matrículas associadas.
    </div>
}

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>
            <dt class="col-sm-3">Preço base</dt>
            <dd class="col-sm-9">@Model.PrecoBase.ToString("C2")</dd>
            <dt class="col-sm-3">Carga horária</dt>
            <dd class="col-sm-9">@Model.CargaHoraria h</dd>
        </dl>
    </div>
</div>

@if (hasMatriculas)
{
    <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
}
else
{
    <form asp-action="Delete" method="post" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
    </form>
    <a class="btn btn-link" asp-action="Index">Cancelar</a>
}
